<h1>Edit Post</h1>
<br>
<div>
  <%= form_for @post do |p| %>
  <div class="row">
  <div class= "col-md-2">
  <%= p.label :category %>
  <br>
  <br>
  <%= p.label :location %>
  <br>
  <br>
  <%= p.label :title %>
  <br>
  <br>
  <%= p.label :description %>
  <br>
  <br>
  <%= p.label :picture_upload, "Upload Relevant Pictures" %>
  </div>
  <div class= "col-md-2">
  <%= p.select :category, Post::categories%>
  <br>
  <br>
  <%= p.text_field :location%>
  <br>
  <br>
  <%= p.text_field :title%>
  <br>
  <br>
  <%= p.text_area :body%>
  </div>
  </div>
  <%= p.file_field :picture_upload %>
  <br>
  <br>
  <br>
  <%= p.submit %>
  <% end %>
  </div>
